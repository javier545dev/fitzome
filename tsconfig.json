{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "*": ["app/*"],
            "@components/*": ["app/components/*"],
            "@features/*": ["app/features/*"],
            "@storage/*": ["app/local_storage/*"],
            "@styles/*": ["app/styles/*"],
            "@redux/*": ["app/redux/*"],
            "@resources/*": ["resources/*"],
            "@hooks/*": ["app/hooks/*"],
        },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }